{
  "compilerOptions": {
    "target": "ES2015",                          
    "module": "ESNext",                     
    "lib": ["DOM", "ES2015"],                             
    "outDir": "./dist",                       
    "strict": true,                        
    "moduleResolution": "node",      
    "esModuleInterop": true,                  
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
